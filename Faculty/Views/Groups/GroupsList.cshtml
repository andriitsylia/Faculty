@using Faculty.ViewModel
@model GroupsListViewModel
@{
    ViewData["Title"] = "GroupsList";
}

<h1>List of the groups</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>CourseId</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.Groups)
        {
            <tr>
                <td>@group.GroupId</td>
                <td>@group.CourseId</td>
                <td>@group.Name</td>
            </tr>
        }
    </tbody>
</table>

@using Faculty.WEB.ViewModel
@model FullListViewModel
@{
    ViewData["Title"] = "Edit group's profile";
}

<h1>@ViewData["Title"] - @Model.Groups.ElementAt(0).Name</h1>


<div class="form-group">
    <form method="post" class="form-horizontal" role="form" asp-controller="Groups" asp-action="SaveGroup">
        <input type="hidden" asp-for="@Model.Groups.ElementAt(0).GroupId" />
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="@Model.Groups.ElementAt(0).Name"></label><br>
            <input class="col-md-3 form-control" asp-for="@Model.Groups.ElementAt(0).Name" /><br>
            <span asp-validation-for="@Model.Groups.ElementAt(0).Name"></span>
            <input type="submit" value="Save">
        </div>
    </form>
</div>

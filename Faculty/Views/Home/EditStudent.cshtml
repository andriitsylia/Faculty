@using WEB.Models
@model Student
@{
    ViewData["Title"] = "Edit student's profile";
}

<h1>@ViewData["Title"] - @Model.FirstName @Model.LastName</h1>


<div class="form-group">
    <form method="post" class="form-horizontal" role="form" asp-controller="Home" asp-action="SaveStudent">
        <input type="hidden" asp-for="StudentId" />
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="FirstName"></label><br>
            <input class="col-md-3 form-control" asp-for="FirstName" /><br>
            <span asp-validation-for="FirstName"></span>
            <label class="col-md-2 control-label" asp-for="LastName"></label><br>
            <input class="col-md-2 form-control" asp-for="LastName" /><br>
            <span asp-validation-for="LastName"></span>
            <input type="submit" value="Save">
        </div>
</form>
</div>
